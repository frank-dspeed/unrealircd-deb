#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

override_dh_auto_configure:
	./configure --with-showlistmodes --with-listen=5 --with-dpath=/etc/unrealircd --with-spath=/usr/bin/ircd --with-nick-history=2000 --with-sendq=3000000 --with-bufferpool=18 --with-permissions=0600 --with-fd-setsize=1024 --enable-dynamic-linking --enable-ssl --enable-ziplinks --enable-inet6 --enable-libcurl --with-system-cares

override_dh_auto_install:
	make IRCDDIR=debian/unrealircd/etc/unrealircd BINDIR=debian/unrealircd/usr/bin/ircd install

%:
	dh $@  --with autotools-dev
